<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/newServerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/server_name" />

    <EditText
        android:id="@+id/newServerAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/newServerName"
        android:ems="10"
        android:inputType="textVisiblePassword"
        android:hint="@string/server_address" />

    <EditText
        android:id="@+id/newServerPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/newServerAddress"
        android:ems="10"
        android:hint="@string/server_port"
        android:inputType="number" >

        <requestFocus />
    </EditText>

</RelativeLayout>